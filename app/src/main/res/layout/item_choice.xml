<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="5dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    app:strokeWidth="1dp"
    app:strokeColor="@color/lightest_gray">

    <LinearLayout
        android:id="@+id/layout_choice_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_choice_index"
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="A"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/circle_tv_choice"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_choice_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/short_string"
            android:textSize="16sp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>