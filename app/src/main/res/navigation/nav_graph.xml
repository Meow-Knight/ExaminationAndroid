<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/showSchedule">

    <fragment
        android:id="@+id/showSchedule"
        android:name="com.example.docterscheduler.fragments.ShowScheduleFragment"
        android:label="fragment_show_schedule"
        tools:layout="@layout/fragment_show_schedule" >
        <action
            android:id="@+id/action_showSchedule_to_addSchedule"
            app:destination="@id/addSchedule" />
    </fragment>
    <fragment
        android:id="@+id/addSchedule"
        android:name="com.example.docterscheduler.fragments.AddScheduleFragment"
        android:label="fragment_add_schedule"
        tools:layout="@layout/fragment_add_schedule" />
</navigation>